<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/custom_notification_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingBottom="1dp"
            android:paddingLeft="4dp"
            android:paddingRight="6dp" />

        <ImageView
            android:id="@+id/application_small_icon"
            android:layout_width="18.2dp"
            android:layout_height="18.2dp"
            android:layout_alignBottom="@id/custom_notification_icon"
            android:layout_alignRight="@id/custom_notification_icon"
           />

    </RelativeLayout>
    <!-- Expanded Content (more detailed message) -->
    <TextView
        android:id="@+id/notification_expanded_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/custom_notification_icon"
        android:paddingStart="10dp"
        android:text="This is the expanded notification view. You can display more text here."
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:maxLines="5" />
</RelativeLayout>
